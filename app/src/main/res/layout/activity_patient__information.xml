<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Patient_Information">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"

            >



            <view
                android:id="@+id/Patient_profile"
                class="de.hdodenhof.circleimageview.CircleImageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/pro" />

            <TextView
                android:id="@+id/Patient_name"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Patient_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Patient Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/Gender"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:layout_below="@+id/Patient_name"
                android:layout_alignStart="@+id/Patient_name"
                android:layout_alignEnd="@+id/Patient_name"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Gender"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/Age"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:layout_below="@+id/Gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Age"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignmentMode="alignMargins"
                    app:columnCount="1"
                    app:rowCount="12">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"

                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/adhaar"
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/aadhaar_logo" />

                            <EditText
                                android:id="@+id/adhaarnumber"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/_858837467920"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/location_tracking"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"

                                android:layout_marginStart="10dp"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/q_location"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="30dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Quarantine Location"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/lat"
                                android:layout_width="103dp"
                                android:layout_height="27dp"
                                android:layout_alignTop="@+id/longit"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="10dp"

                                android:layout_toStartOf="@+id/longit"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Latitude"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/longit"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="30dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:layout_alignParentBottom="true"
                                android:text="Longitude"
                                android:textColor="#000000"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/address_tracking"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
android:layout_marginStart="10dp"
                                android:src="@drawable/attn" />

                            <EditText
                                android:id="@+id/editText5"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Attendance History"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>










                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/id"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/id" />

                            <EditText
                                android:id="@+id/idnumber"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/_5555544"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/blood"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/blood" />

                            <EditText
                                android:id="@+id/bloodgroup"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/o_ve"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"

                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/insurance_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/insurance" />

                            <EditText
                                android:id="@+id/insuranceid"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="AB12345"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/phone_rl"
                            >

                            <ImageView
                                android:id="@+id/phone_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/call_icon" />

                            <EditText
                                android:id="@+id/phone_number"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"

                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:enabled="false"
                                android:text="Phone Number"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/height_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/height_icon" />

                            <EditText
                                android:id="@+id/heightinches"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/_5_8"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/weight_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/weight_icon" />

                            <EditText
                                android:id="@+id/weightinkg"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/_63"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/medicine"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/medicine_icon" />

                            <EditText
                                android:id="@+id/medicineid"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"

                                android:layout_alignParentEnd="true"

                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/ciprofloxacin_azithromycin_and_ceftriaxone"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/address_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/address" />

                            <EditText
                                android:id="@+id/addressid"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"


                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:text="@string/_134_sengunthar_nagar_erode_638004"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:id="@+id/parameters_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/param_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/parameters" />

                            <EditText
                                android:id="@+id/parameters"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:enabled="false"
                                android:text="Parameters"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:backgroundTint="#ffffff"
                        app:cardElevation="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/documents_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/documents_icon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/docs_icon" />

                            <EditText
                                android:id="@+id/documents"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="60dp"
                                android:enabled="false"
                                android:text="Documents"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
