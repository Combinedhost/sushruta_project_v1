<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mbp.sushruta_v1">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@drawable/sushruta_white"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".TestActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DoctorListActivity"
            android:label="List of Doctors" />
        <activity
            android:name=".SubDoctorListActivity"
            android:label="List of Sub Doctors" />
        <activity
            android:name=".Patient_Information"
            android:label="Patient Details" />
        <!-- android:theme="@style/Theme.AppCompat.NoActionBar"/> -->
        <activity
            android:name=".Create_Patient"
            android:label="Create new Patient" />
        <activity
            android:name=".PatientList"
            android:label="List of Patients" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Test" />
        <activity
            android:name=".Documents_patients"
            android:label="@string/title_activity_documents_patients" />
        <activity android:name=".Webview" />
        <activity
            android:name=".ParametersList"
            android:label="@string/title_activity_parameters_patients" />
        <activity
            android:name=".ParameterValues"
            android:label="@string/title_activity_parameter_values" />
        <activity android:name=".ChartActivity"></activity>
    </application>

</manifest>